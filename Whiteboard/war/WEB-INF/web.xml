<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.YCPCS.Whiteboard.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserAccountServlet</servlet-name>
    <servlet-class>com.YCPCS.Whiteboard.servlet.UserAccountServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>HubServlet</servlet-name>
    <servlet-class>com.YCPCS.Whiteboard.servlet.HubServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>com.YCPCS.Whiteboard.servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>ClassCreateServlet</servlet-name>
    <servlet-class>com.YCPCS.Whiteboard.servlet.ClassCreateServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>LectureServlet</servlet-name>
    <servlet-class>com.YCPCS.Whiteboard.servlet.LectureServlet</servlet-class>
  </servlet>
  <servlet>
  <servlet-name>HelpServlet</servlet-name>
    <servlet-class>com.YCPCS.Whiteboard.servlet.HelpServlet</servlet-class>
  </servlet>
  
  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserAccountServlet</servlet-name>
    <url-pattern>/UserAccount/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ClassCreateServlet</servlet-name>
    <url-pattern>/ClassCreate/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LectureServlet</servlet-name>
    <url-pattern>/lecture/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/SignUp/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HubServlet</servlet-name>
    <url-pattern>/hub/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HelpServlet</servlet-name>
    <url-pattern>/Help/*</url-pattern>
  </servlet-mapping>
 
  
  <!-- Listeners -->
  <listener>
    <listener-class>com.YCPCS.Whiteboard.servlet.DatabaseInitListener</listener-class>
  </listener>

  <welcome-file-list>
    <welcome-file>/login</welcome-file>
    <welcome-file>/hub</welcome-file>
  </welcome-file-list>
</web-app>
